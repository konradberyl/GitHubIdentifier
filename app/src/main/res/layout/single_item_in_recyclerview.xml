<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="120sp"
                android:textColor="#eeeeee"
                android:id="@+id/number_of_repository_in_single_card_tv"
                android:fontFamily="sans-serif-condensed"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simple_text_repo_name"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:text="nazwa repozytorium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/simple_text_repo_name"
                android:id="@+id/repo_name_tv"
                android:gravity="center"
                android:textColor="#f57c00"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simple_text_github_address_tv_in_recyclerview"
                android:layout_below="@+id/repo_name_tv"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:text="github adres"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/simple_text_github_address_tv_in_recyclerview"
                android:id="@+id/github_address_tv_in_recyclerview"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#f57c00"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simple_text_language"
                android:layout_below="@+id/github_address_tv_in_recyclerview"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:text="jÄ™zyk"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/simple_text_language"
                android:id="@+id/language_tv_in_recyclerview"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#f57c00"
                android:gravity="center"
                android:singleLine="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simple_text_description"
                android:layout_below="@+id/language_tv_in_recyclerview"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:text="opis"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/simple_text_description"
                android:id="@+id/description"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="#f57c00"
                android:textSize="15sp"
                android:gravity="center"
                android:maxLines="4"
                 />



        </RelativeLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>